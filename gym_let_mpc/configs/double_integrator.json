{
  "environment": {
    "max_steps": 100,
    "observation": {
      "variables": [
        {
          "name": "x1",
          "type": "epsilon",
          "transform": ["none"],
          "limits": [-1, 1]
        },
        {
          "name": "x2",
          "type": "epsilon",
          "transform": ["none"],
          "limits": [-2, 2]
        },
        {
          "name": "c-x1-u",
          "type": "constraint",
          "value_type": "distance",
          "limits": [-2, 2]
        },
        {
          "name": "c-x1-l",
          "type": "constraint",
          "value_type": "distance",
          "limits": [-2, 2]
        },
        {
          "name": "mpc_compute_time",
          "type": "time",
          "value_type": "fraction",
          "limits": [0, 1]
        }
      ]
    },
    "action": {
      "variables": [
        {
          "name": "mpc_compute"
        }
      ]
    },
    "reward": {
      "variables": [
        {
          "type": "state",
          "name": "x1"
        },
        {
          "type": "reference",
          "name": "x1_r"
        },
        {
          "type": "input",
          "name": "u1",
          "value_type": "delta"
        },
        {
          "type": "constraint",
          "name": "c-x1-u",
          "value_type": "distance"
        },
        {
          "type": "constraint",
          "name": "c-x1-l",
          "value_type": "distance"
        },
        {
          "type": "action",
          "name": "mpc_compute",
          "value_type": "controller"
        }
      ],
      "expression": "-10*(x1_r-x1)**2 - 25 * max(0, c-x1-u) - 25 * max(0, c-x1-l) - 0.5 * mpc_compute"
    },
    "randomize": {
      "reference": {
        "x1_r": {
          "type": "uniform",
          "kw": {
            "low": -0.5,
            "high": 0.5
          }
        }
      },
      "state": {
        "x1": {
          "type": "uniform",
          "kw": {
            "low": -1,
            "high": 1
          }
        },
        "x2": {
          "type": "uniform",
          "kw": {
            "low": -0.1,
            "high": 0.1
          }
        }
      },
      "constraints": {
        "c-x1-u": {
          "type": "uniform",
          "kw": {
            "low": -0.6,
            "high": 1.3
          }
        },
        "c-x1-l": {
          "type": "uniform",
          "kw": {
            "low": -1.3,
            "high": 0.6
          }
        }
      },
      "model": {
      }
    },
    "render": {
      "plot_action": true,
      "plot_reward": true
    },
    "info": {
      "reward": {
        "base": "10*(x1_r-x1)**2",
        "constraint": "25 * max(0, c-x1-u) + 25 * max(0, c-x1-l)",
        "computation": "0.5 * mpc_compute"
      }
    }
  },
  "plant": {
    "render": {
      "process_noise": true
    },
    "params": {
      "t_step": 0.1
    },
    "model": {
      "type": "continuous",
      "class": "linear",
      "states": {
        "x1": {
          "a": {"x2": 1},
          "b": {"u1": 0}
        },
        "x2": {
          "a": {"x1": 0},
          "b": {"u1": 0.25},
          "W": {
            "type": "normal",
            "kw": {
              "loc": 0.3,
              "scale": 0.1
            },
            "scale": 1
          }
        }
      },
      "inputs": {
        "u1": {
          "unit": "rad/s"
        }
      }
    }
  },
  "mpc": {
    "params": {
      "n_horizon": 20,
      "t_step": 0.1,
      "n_robust": 0,
      "store_full_solution": true
    },
    "model": "plant",
    "reference": {
      "x1_r": {
        "type": "_x",
        "value": 0.3
      }
    },
    "constraints": [
      {
        "var_name": "x1",
        "var_type": "_x",
        "constraint_type": "lower",
        "soft": false,
        "cost": 100,
        "value": 0.2
      },
      {
        "var_name": "x1",
        "var_type": "_x",
        "soft": false,
        "cost": 100,
        "constraint_type": "upper",
        "value": 0.7
      },
      {
        "var_name": "u1",
        "var_type": "_u",
        "constraint_type": "lower",
        "value": -3
      },
      {
        "var_name": "u1",
        "var_type": "_u",
        "constraint_type": "upper",
        "value": 3
      }
    ],
    "objective": {
      "lterm": {
        "variables": [
          {
            "name": "x1",
            "type": "_x"
          },
          {
            "name": "x1_r",
            "type": "_r"
          }
        ],
        "expression": "(x1_r - x1)**2"
      },
      "mterm": {
        "variables": [
          {
            "name": "x1",
            "type": "_x"
          },
          {
            "name": "x1_r",
            "type": "_r"
          }
        ],
        "expression": "(x1_r - x1)**2"
      },
      "R_delta": {
        "u1": 1e-2
      }
    }
  },
  "lqr": {
      "model": "mpc",
      "objective": {
        "Q": [[1, 0], [0, 1]],
        "R": [0.05]
      }
    }
}